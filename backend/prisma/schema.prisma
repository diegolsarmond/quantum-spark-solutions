generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["site_quantum"]
}

model AdminUser {
  id           String         @id @default(uuid())
  email        String         @unique
  passwordHash String
  name         String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  posts        BlogPost[]
  sessions     SessionToken[]

  @@schema("site_quantum")
}

model BlogPost {
  id          String    @id @default(uuid())
  title       String
  slug        String    @unique
  description String
  author      String
  category    String
  date        String
  readTime    String
  tags        String[]
  image       String?
  featured    Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  createdById String?
  createdBy   AdminUser? @relation(fields: [createdById], references: [id])

  @@schema("site_quantum")
}

model Service {
  id          String   @id @default(uuid())
  name        String
  description String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@schema("site_quantum")
}

model SessionToken {
  id        String    @id @default(uuid())
  token     String    @unique
  adminId   String
  admin     AdminUser @relation(fields: [adminId], references: [id])
  createdAt DateTime  @default(now())
  expiresAt DateTime

  @@schema("site_quantum")
}
